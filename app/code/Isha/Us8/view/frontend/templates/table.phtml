<?php
$employeeCollection = $this->getEmployeeCollection();

if ($employeeCollection && count($employeeCollection) > 0) :
?>

<h1>Employee Table</h1>

<table>
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email ID</th>
        </tr>
    </thead>
    <tbody>
        <?php foreach ($employeeCollection as $employee) : ?>
            <tr>
                <td><?php echo $employee->getEmployeeId(); ?></td>
                <td><?php echo $employee->getFirstName(); ?></td>
                <td><?php echo $employee->getLastName(); ?></td>
                <td><?php echo $employee->getEmailId(); ?></td>
            </tr>
        <?php endforeach; ?>
    </tbody>
</table>
<?php else: ?>
<p>No employees found.</p>
<?php endif; ?>